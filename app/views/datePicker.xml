<Alloy>
	<Window id="datePicker">
		<View height="90dp" top="30dp">
			<Picker id="pickDay" onChange="reportDate" onPostlayout="reportDate" type="Ti.UI.PICKER_TYPE_DATE" useSpinner="false" locale="es-ES"></Picker>
		</View>
		<View height="90dp" top="160dp">
			<Picker id="pickerCustom" selectionIndicator="true" useSpinner="false">
            <PickerColumn id="horas" width="70dp">
                <!-- <Row title="00"/> -->
                <Row title="01"/>
                <Row title="02"/>
                <Row title="03"/>
                <Row title="04"/>
                <Row title="05"/>
                <Row title="06"/>
                <Row title="07"/>
                <Row title="08"/>
                <Row title="09"/>
                <Row title="10"/>
                <Row title="11"/>
                <Row title="12"/>
                <!-- <Row title="13"/>
                <Row title="14"/>
                <Row title="15"/>
                <Row title="16"/>
                <Row title="17"/>
                <Row title="18"/>
                <Row title="19"/>
                <Row title="20"/>
                <Row title="21"/>
                <Row title="22"/>
                <Row title="23"/>
                <Row title="24"/> -->
            </PickerColumn>
            <!-- Picker shorthand notation -->
            <Column id="minutos" width="70dp">
                <Row title="00"/>
                <Row title="15"/>
                <Row title="30"/>
                <Row title="45"/>
            </Column>
            <Column id="tiempo" width="70dp">
                <Row title="AM"/>
                <Row title="PM"/>
                
            </Column>
        </Picker>
			<!-- <Picker id="pickHour" onChange="reportTime" onPostlayout="reportTime" type="Ti.UI.PICKER_TYPE_TIME" useSpinner="false" locale="es-ES" format24="true"></Picker> -->
		</View>
			<Button onClick="datosDate" id="dateReady" bottom="30dp">Confirmar</Button>
	</Window>
</Alloy>