<Alloy>
	<Window id="datePicker">
		<View height="90dp" top="30dp">
			<Picker id="pickDay" onPostlayout="setDatePicker" type="Ti.UI.PICKER_TYPE_DATE" useSpinner="false" locale="es-ES"></Picker>
		</View>
		<Button id="today" onClick="today" top="120dp">Hoy</Button>
		<View height="90dp" top="230dp">
			<Picker id="pickerCustom" selectionIndicator="true" useSpinner="false" >
	            <Column id="hours">
	                <!-- <Row title="00"/> -->
	                <Row title="01" value="01"/>
	                <Row title="02" value="02"/>
	                <Row title="03" value="03"/>
	                <Row title="04" value="04"/>
	                <Row title="05" value="05"/>
	                <Row title="06" value="06"/>
	                <Row title="07" value="07"/>
	                <Row title="08" value="08"/>
	                <Row title="09" value="09"/>
	                <Row title="10" value="10"/>
	                <Row title="11" value="11"/>
	                <Row title="12" value="12"/>
	              
	            </Column>
        	</Picker>
        	<Picker id="pickerCustom2" selectionIndicator="true" useSpinner="false" >
            <Column id="quarters">
                <Row title="00" value="01"/>
                <Row title="15" value="02"/>
                <Row title="30" value="03"/>
                <Row title="45" value="04"/>
            </Column>
            </Picker>
            <Picker id="pickerCustom3" selectionIndicator="true" useSpinner="false" >
            <Column id="ap">
                <Row title="AM" value="01"/>
                <Row title="PM" value="02"/>
            </Column>
            </Picker>
			<!-- <Picker id="pickHour" onChange="reportTime" onPostlayout="reportTime" type="Ti.UI.PICKER_TYPE_TIME" useSpinner="false" locale="es-ES" format24="true"></Picker> -->
		</View>
			<Button onClick="datosDate" id="dateReady" bottom="30dp">Confirmar</Button>
	</Window>
</Alloy>